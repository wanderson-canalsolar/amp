            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    />
    <input
            name="notify_delete_event_subject"
            type="text2"
            label=" "
            value="A file has been removed"
            class="ju-input ju-large-text"
            required="true"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"

