            class="inputbox input-block-level"
            required="true"
            value="0"
            event="removed"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    />

    <input
            name="notify_download_event"
            type="switcher"
            label="A file is downloaded"
            value="1"
            class="ju-input"
            required="true"
            tooltip="A file is downloaded"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    >
        <option value="1">Yes</option>
        <option value="0">No</option>
    </input>
    <input
            name="placeholder"
            type="settingholder"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
