            id="notify_download_event_editor"
            name="notify_download_event_editor"
            type="editor"
            label=" "
            class="inputbox input-block-level"
            required="true"
            value="0"
            event="downloaded"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    />

